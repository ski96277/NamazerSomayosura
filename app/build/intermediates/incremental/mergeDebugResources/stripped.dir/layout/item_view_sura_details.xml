<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/transparent_background"
    android:elevation="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/aiyat_show_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:minHeight="80dp"
            android:text="@string/sura_kador"
            android:textColor="@color/text_color_white_TV"
            android:textSize="@dimen/text_vew_size2" />

        <LinearLayout
            android:id="@+id/line_black"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/aiyat_show_TV"
            android:background="#000"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/english_ortho_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/sura_kador"
            android:background="@color/transparent_background"
            android:textColor="@color/text_color_white_TV"
            android:textSize="@dimen/text_vew_size3" />

        <LinearLayout
            android:id="@+id/line_black_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/english_ortho_TV"
            android:background="#000"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/bangla_Ortho_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_black_2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent_background2"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/sura_kador"
            android:textColor="@color/text_color_white_TV"
            android:textSize="@dimen/text_vew_size3" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

